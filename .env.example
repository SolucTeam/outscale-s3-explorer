# ============================================
# NUMS3 Console - Variables d'environnement
# ============================================
# 
# Ce fichier liste toutes les variables d'environnement disponibles.
# Pour les utiliser en développement local, créez un fichier .env.local
# et définissez les valeurs souhaitées.
# 
# Pour la production Kubernetes, utilisez les ConfigMaps et Secrets.
# Voir: nums3-helm-chart/values-production.yaml

# ============================================
# Configuration du Proxy S3
# ============================================

# URL du serveur proxy pour contourner CORS
# Dev: http://localhost:3001/api
# Prod: /api (Nginx fera le routing)
VITE_PROXY_URL=http://localhost:3001/api

# Timeout des requêtes proxy (en millisecondes)
VITE_PROXY_TIMEOUT=30000

# ============================================
# Endpoints Outscale S3
# ============================================

VITE_ENDPOINT_EU_WEST_2=https://oos.eu-west-2.outscale.com
VITE_ENDPOINT_US_EAST_2=https://oos.us-east-2.outscale.com
VITE_ENDPOINT_US_WEST_1=https://oos.us-west-1.outscale.com
VITE_ENDPOINT_CLOUDGOUV=https://oos.cloudgouv-eu-west-1.outscale.com
VITE_ENDPOINT_AP_NORTHEAST_1=https://oos.ap-northeast-1.outscale.com

# ============================================
# Configuration du Cache
# ============================================

# Activer/désactiver le cache
VITE_CACHE_ENABLED=true

# TTL du cache (en millisecondes)
# ⚠️  Ajuster selon vos besoins: performance vs fraîcheur des données
VITE_CACHE_TTL_BUCKETS=300000      # 5 minutes - Liste des buckets
VITE_CACHE_TTL_OBJECTS=180000      # 3 minutes - Liste des objets
VITE_CACHE_TTL_CREDENTIALS=1800000 # 30 minutes - Credentials chiffrés

# ============================================
# Configuration des Logs
# ============================================

# Activer/désactiver les logs
VITE_LOGGING_ENABLED=true

# Niveau de log: debug | info | warn | error
VITE_LOG_LEVEL=info

# ============================================
# Configuration des Uploads
# ============================================

# Nombre maximum d'uploads simultanés
VITE_UPLOAD_MAX_CONCURRENT=5

# Taille des chunks d'upload (en octets)
VITE_UPLOAD_CHUNK_SIZE=5242880  # 5 MB

# Timeout des uploads (en millisecondes)
VITE_UPLOAD_TIMEOUT=60000  # 60 secondes

# ============================================
# Configuration du Retry
# ============================================

# Nombre maximum de tentatives
VITE_RETRY_MAX_ATTEMPTS=3

# Délai de base entre les tentatives (en millisecondes)
VITE_RETRY_BASE_DELAY=1000

# Délai maximum entre les tentatives (en millisecondes)
VITE_RETRY_MAX_DELAY=10000
